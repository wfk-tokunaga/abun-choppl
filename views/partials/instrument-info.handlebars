<article class="listing">
    <div class="name-section">
        <a href="/instrument/{{id}}" class="title-link">{{name}}</a>
        {{!-- <span class="comp-info">by <span class="username"><a href="/user/{{user.id}}">{{user.username}}</a></span></span> --}}
    </div>
    <div class="instrument-section">
        {{#if compositions.length}}
        Compositions
        <ul>
            {{#each compositions as |comp|}}
            <li>
                <a href="/composition/{{comp.id}}">{{composition.title}}</a>
            </li>
            {{/each}}
        </ul>
        {{/if}}

        {{#if users.length}}
        Users
        <ul>
            {{#each users as |user|}}
            <li>
                <a href="/user/{{user.id}}">{{user.username}}</a>
            </li>
            {{/each}}
        </ul>
        {{/if}}
    </div>
    
</article>